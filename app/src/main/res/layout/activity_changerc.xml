<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/typeTextLabelRC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of "
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <RelativeLayout
        android:id="@+id/timeEditLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeTextLabelRC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/rcTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R/C  :"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/rcEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/rcTextLabel"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeEditLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/popUpCancelButtonRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="Cancel"
            android:layout_marginRight="40dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/popUpSaveButtonRC"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/popUpCancelButtonRC"
            android:text="Save" />

    </RelativeLayout>

</RelativeLayout>